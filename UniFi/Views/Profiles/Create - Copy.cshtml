@model UniFi.Models.Profile

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .textc {
        color: whitesmoke;
    }

</style>

<h2 class="text-center textc">Create Brand Page</h2>
<hr />
<div class="row d-flex justify-content-center" style="margin: 10px;">
    <div class="col-md-8" style="background-color: #0C072A; border-radius: 16px;">
