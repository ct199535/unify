                                            <span asp-validation-for="Instagram" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="brand-setting-boxes d-flex">
                                        <i class="fa-brands fa-discord"></i>
                                        <div class="contact-input" style="width: 100%;">
                                            <label asp-for="DiscordInvite" class="control-label"></label>
                                            <input asp-for="DiscordInvite" class="form-control" />
                                            <span asp-validation-for="DiscordInvite" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="single-contact">

                                    <div class="contact-logo">
                                        <a href="#"><img src="~/assets/img/product/contact-logo.png" alt=""></a>
                                    </div>
                                    <div class="contact-input">
                                        <label asp-for="CompanyDetails" class="control-label"></label>
                                        <input asp-for="CompanyDetails" class="form-control" />
                                        <span asp-validation-for="CompanyDetails" class="text-danger"></span>
                                    </div>
                                    <div class="contact-input">
                                        <label asp-for="Logo" class="control-label"></label>
                                        <input asp-for="Logo" class="form-control" />
                                        <span asp-validation-for="Logo" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="single-contact">

                                    <div class="contact-logo">
                                        <a href="#"><img src="~/assets/img/product/contact-logo.png" alt=""></a>
                                    </div>
                                    <div class="contact-input">
                                        <br>
                                        <label asp-for="TwitterUsername" class="control-label"></label>
                                        <input asp-for="TwitterUsername" class="form-control" />
                                        <span asp-validation-for="TwitterUsername" class="text-danger"></span>
                                    </div>
                                    <div class="contact-input">
                                        <label asp-for="DiscordUsername" class="control-label"></label>
                                        <input asp-for="DiscordUsername" class="form-control" />
                                        <span asp-validation-for="DiscordUsername" class="text-danger"></span>
                                    </div>
                                    <div class="contact-input">
                                        <label asp-for="CompanyName" class="control-label"></label>
                                        <input asp-for="CompanyName" class="form-control" />
                                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                                    </div>
                                    <div class="contact-input">
                                        <label asp-for="CompanyAge" class="control-label"></label>
                                        <input asp-for="CompanyAge" class="form-control" />
                                        <span asp-validation-for="CompanyAge" class="text-danger"></span>
                                    </div>

                                    <input type="submit" value="Save" class="saveBTN" />

                                </div>
                   

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--    contact-area-end-->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/Popper.js"></script>
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/venobox.min.js"></script>
    <script src="~/assets/js/aos.js"></script>
    <script src="~/assets/js/jquery.sticky.js"></script>
    <script src="~/assets/js/slick.min.js"></script>
    <script src="~/assets/js/jquery.nice-select.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script>
        $(".contact-slider").owlCarousel({
            items: 1,
            nav: true,
            dot: true,
            navText: ['Previous', 'Next'],
            loop: false,
            stagePadding: 0,
            margin: 10,
            autoplay: false,
            autoplayTimeout: 3000,
            smartSpeed: 1000,
            autoHeight: true,
            responsiveClass: true,
            responsive: {
                0: {
                    items: 1,

                },
                768: {
                    items: 1,

                },
                1000: {
                    items: 1,

                }
            },
            URLhashListener: true,
            autoplayHoverPause: true,
            startPosition: "URLHash",
            onTranslate: function (e) {
                $(".owl-item").removeClass("highlighted");
            },
            onTranslated: function (e) {
                $(".owl-item").eq(e.item.index).addClass("highlighted");
            },


        });

        $('.owl-carousel').on('changed.owl.carousel', function (e) {

            $('button.owl-next').removeAttr('disabled');
            $('button.owl-prev').removeAttr('disabled');



            if ((e.page.index + 1) >= e.page.count) {
                $('button.owl-next').attr('disabled', 'disabled');
                $('button.owl-prev').addClass('disabled');
            } else {
                $('button.owl-next').removeAttr('disabled');
            }

            if (e.page.index == 0) {
                $('button.owl-prev').attr('disabled', 'disabled');
            } else {
                $('button.owl-prev').removeAttr('disabled');
            }


        });

    </script>
    <script src="~/assets/js/main.js"></script>



</body>

</html>



