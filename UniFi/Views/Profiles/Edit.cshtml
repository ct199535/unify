    <!--    contact-area-start-->
    <div class="contact-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="contact-box">
                        <form asp-action="Edit" class="m-5 textc">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="contact-slider owl-carousel">


                                <div class="single-contact">

                                    <div class="contact-logo">
                                        <a href="#"><img src="~/assets/img/product/contact-logo.png" alt=""></a>
                                    </div>
                                    <input type="hidden" asp-for="Id" />
                                    <div class="contact-input" style="display: none">
                                        <label asp-for="UserId" class="control-label"></label>
                                        <input asp-for="UserId" class="form-control" />
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </div>
                                    <div class="contact-input" style="display: none">
                                        <label asp-for="EmailAdd" class="control-label"></label>
                                        <input asp-for="EmailAdd" class="form-control" />
                                        <span asp-validation-for="EmailAdd" class="text-danger"></span>
                                    </div>
                                    <div class="contact-input">
                                        <label asp-for="FullName" class="control-label"></label>
                                        <input asp-for="FullName" class="form-control" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="contact-input">
                                        <label asp-for="Wallet" class="control-label"></label>
                                        <input asp-for="Wallet" class="form-control" readonly="readonly" style="color: black;" />
                                        <span asp-validation-for="Wallet" class="text-danger"></span>
                                        <br>

                                        <a href="@Url.Action("ConnectBrandWallet", "Profiles")" class="btn btn-primary p-2" style="background-color: #215BA0; border-color: #215BA0; border-radius: 12px; width: 240px;">Change Wallet</a>

                                    </div>
                                    <div class="contact-input">
                                        <label asp-for="Country" class="control-label"></label>
                                        <input asp-for="Country" class="form-control" />
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                    <div class="contact-input">
                                        <label asp-for="City" class="control-label"></label>
                                        <input asp-for="City" class="form-control" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="single-contact">

                                    <div class="contact-logo">
                                        <a href="#"><img src="~/assets/img/product/contact-logo.png" alt=""></a>
                                    </div>
                                    
                                    <div class="brand-setting-boxes d-flex">
                                        <i class="fa-solid fa-globe"></i>
                                        <div class="contact-input" style="width: 100%;">
                                            <label asp-for="Website" class="control-label"></label>
                                            <input asp-for="Website" class="form-control" />
                                            <span asp-validation-for="Website" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="brand-setting-boxes d-flex">
                                        <i class="fa-brands fa-x-twitter"></i>
                                        <div class="contact-input" style="width: 100%;">
                                            <label asp-for="Twitter" class="control-label"></label>
                                            <input asp-for="Twitter" class="form-control" />
                                            <span asp-validation-for="Twitter" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="brand-setting-boxes d-flex">
                                        <i class="fa-brands fa-facebook-f"></i>
                                        <div class="contact-input" style="width: 100%;">
                                            <label asp-for="Facebook" class="control-label"></label>
                                            <input asp-for="Facebook" class="form-control" />
                                            <span asp-validation-for="Facebook" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="brand-setting-boxes d-flex">
                                        <i class="fa-brands fa-instagram"></i>
                                        <div class="contact-input" style="width: 100%;">
                                            <label asp-for="Instagram" class="control-label"></label>
