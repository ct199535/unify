<!--    add-area-start-->
<div class="add-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="add-title">
                    <h3>Add To Cart</h3>
                </div>
                <div class="add-fl" data-aos="fade-up" data-aos-delay="150"
                     data-aos-duration="1100">
                    @foreach (var item in ViewBag.cart) {

                     <div class="single-add">
                        <div class="add-left">
                            <div class="add-img">
                                <a href="#"><img src="@Url.Content(@item.Product.Image)" alt=""></a>
                            </div>
                            <div class="add-text">
                                <h3>@item.Product.Name</h3>
                                <p>$ @item.Product.Price</p>
                                <p>QTY: @item.Quantity</p>
                            </div>
                        </div>
                        <div class="add-number">
                                <a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id" class="btn btn-primary" style="border-radius: 12px; border-color: #EB4823; background-color: #FCD9BB; color: #EB4823;">Remove</a>
                        </div>
                    </div>
                    }

                </div>
                @* <div class="add-btn">
                    <a href="#">Check Out</a>
                </div> *@
            </div>
        </div>
    </div>
</div>
<!--    add-area-end-->



